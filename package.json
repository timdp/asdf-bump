{
  "name": "asdf-bump",
  "description": "Interactive upgrades for asdf.",
  "version": "0.3.1",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timdp/asdf-bump.git"
  },
  "author": {
    "name": "Tim De Pauw",
    "url": "https://tmdpw.eu"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "asdf-bump": "dist/asdf-bump.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "test": "yarn run lint",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "format": "prettier-eslint --write \"src/**/*.{js,jsx}\"",
    "build": "yarn run clean && yarn run bundle",
    "clean": "shx rm -rf dist",
    "bundle": "esbuild src/cli.jsx --bundle --platform=node --format=esm $(jq -r '.dependencies | keys | map(\"--external:\" + .) | join(\" \")' package.json) --sourcemap --outfile=dist/asdf-bump.js",
    "prepare": "husky && yarn run build",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "execa": "^9.2.0",
    "find-up": "^7.0.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "mri": "^1.2.0",
    "p-map": "^7.0.1",
    "react": "^18.2.0",
    "source-map-support": "^0.5.21",
    "split-lines": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/preset-react": "^7.23.3",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier-eslint-cli": "^8.0.1",
    "shx": "^0.3.4"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write"
    ]
  }
}
